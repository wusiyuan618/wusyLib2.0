<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/ll">
    <RelativeLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="54dp">
        <LinearLayout
            android:id="@+id/llBefore"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/ivSelectAll"
                android:src="@mipmap/choose_normal_quality"
                android:layout_width="15dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvName"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="混凝土结构工程"
                android:textColor="#ff393939"
                android:textSize="15sp"
                />
        </LinearLayout>

        <ImageView
            android:id="@+id/ivIcon"
            android:src="@mipmap/arrow_bottom"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:layout_centerVertical="true"
            android:layout_width="10dp"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <View
        android:background="@color/dividingLineColor"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
</LinearLayout>